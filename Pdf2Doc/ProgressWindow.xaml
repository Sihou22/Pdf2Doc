<Window x:Class="Pdf2Doc.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pdf2Doc"
        mc:Ignorable="d"
        Title="转换进度" Height="180
        " Width="300">
    <StackPanel Orientation ="Vertical" VerticalAlignment="Center">
        <Label Name="lblProgress" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>
        <ProgressBar Name="progressBar" Height="30" Margin="20" IsIndeterminate="False" />
        <Button Name="CancelBtn" Content="取消转换" Width="102" Height="33" FontSize="14" Click="CancelBtn_Click"/>
    </StackPanel>
</Window>
